{
    "name": "waglpz/webapp-view-helpers",
    "description": "Collection of View Helpers and these Factory.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexander Hutorezki",
            "email": "alexander.hutorezki@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "apcu-autoloader": true,
        "discard-changes": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "require": {
        "php": "^7.4",
        "ext-apcu": "*",
        "ext-intl": "*",
        "moddengine/dice": "^4.1",
        "psr/container": "^2.0"
    },
    "require-dev": {
        "doctrine/coding-standard": "^9.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^1.5",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-doctrine": "^1.3",
        "phpstan/phpstan-phpunit": "^1.1",
        "phpstan/phpstan-strict-rules": "^1.1",
        "phpstan/phpstan-symfony": "^1.1",
        "phpstan/phpstan-webmozart-assert": "^1.1",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-latest",
        "squizlabs/php_codesniffer": "^3.6",
        "symfony/var-dumper": "^5.4"
    },
    "autoload": {
        "psr-4": {
            "Waglpz\\Webapp\\View\\Helpers\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Waglpz\\Webapp\\View\\Helpers\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "waglpz:cs-check": "phpcs -p",
        "waglpz:cs-fix": "phpcbf -p",
        "waglpz:test:normal": "phpunit --colors=always tests",
        "waglpz:analyse": [
            "phpstan analyse --configuration=phpstan.neon src/ tests/ --level max"
        ],
        "waglpz:check:ci": [
            "@waglpz:check:normal"
        ],
        "waglpz:check:normal": [
            "@waglpz:cs-check",
            "@waglpz:analyse",
            "@waglpz:test:normal"
        ]
    }
}
